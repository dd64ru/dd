<div class="modal fade" id="user-login" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel">Вход в учетную запись</h4>
            </div>
            <div class="modal-body">
                <form class="modal-form">
                    <div class="row">
                        <div class="form-group">
                            <label for="title" class="col-xs-3 control-label">Логин</label>
                            <div class="col-xs-9">
                                <input type="text" class="login-input form-control input-custom" name="login" required>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group">
                            <label for="title" class="col-xs-3 control-label">Пароль</label>
                            <div class="col-xs-9">
                                <input type="password" class="password-input form-control input-custom" name="password" required>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer modalfix">
                        <div>
                            <button type="button" class="btn btn-custom btn-custom-default" data-dismiss="modal">Отмена</button>
                            <button type="button" class="user-enter-btn btn btn-custom btn-custom-ok">Войти</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>