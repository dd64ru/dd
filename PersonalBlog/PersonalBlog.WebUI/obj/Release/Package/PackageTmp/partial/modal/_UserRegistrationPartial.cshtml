<div class="modal fade" id="user-registration" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel">Регистрация</h4>
            </div>
            <div class="modal-body">
                <form method="post" action="~/users/registration" class="modal-form" enctype="multipart/form-data">
                    <div class="row">
                        <div class="form-group">
                            <label for="title" class="col-xs-3 control-label">Логин</label>
                            <div class="col-xs-9">
                                <input type="text" class="try-login form-control input-custom" name="login" required>
                                <span class="info-custom-sm">Логин может содержать только буквы a-z, цифры и "_"</span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group">
                            <label for="title" class="col-xs-3 control-label">Пароль</label>
                            <div class="col-xs-9">
                                <input type="password" class="form-control input-custom" name="password" required>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group">
                            <label for="text" class="col-xs-3 control-label">Изображение</label>
                            <div class="col-xs-9">
                                <label class="btn btn-custom btn-custom-ok">
                                    Загрузить <input type="file" id="upload-input" name="file" class="hidden">
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer modalfix">
                        <div>
                            <button type="button" class="btn btn-custom btn-custom-default" data-dismiss="modal">Отмена</button>
                            <button type="submit" class="registration-button btn btn-custom btn-custom-ok" disabled>Регистрация</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>